@model IEnumerable<ecommerceshoppingApp.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
</head>

<body>
    <h3>Product List</h3>
    
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var product in Model) {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@(Math.Round(product.Price,2))</td>
            <td><img src ="/image/@product.Photo" width="60"/></td>
                    <td><input type="number" min="1" value="1" id="quantity-@product.Id"/></td>

            <td align="center">
                
                <button class="Add-to-cart" data-product-id="@product.Id">

                    Add to Cart
                </button>
                </td>
                </tr>
}
</tbody>
<form asp-controller="Cart" asp-action="Index" method="get">
    <button type ="submit" class="btn btn-primary">Show Cart</button>
</form>
</table>
</body>
@section Scripts{
    <script src="/js/cart.js"></script>
}
             
